<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.baxsoftware.planit.CreateEventActivity$GeneralTabFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|textCapWords"
        android:ems="10"
        android:id="@+id/eventName"
        android:hint="@string/ic_event_name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventDescriptionWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventNameWrapper"
        android:layout_marginTop="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/eventDescription"
            android:hint="@string/ic_description"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:text="@string/in_createfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDescriptionWrapper"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/eventCreateFB"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="@string/in_creategcevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventCreateFB"
        android:layout_alignParentStart="true"
        android:id="@+id/eventCreateGEvent"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
